    <%-style %>
</head>
<body>
    <div class="navbar"><%- include("header") %></div>


       <%- body %>

    <%- include("footer") %>



    <%-script%>
   
    <script>
        <% if(flash.success && flash.success.length > 0) {%>
            new Noty({
                theme: "relax",
                type: 'success',
                layout: 'topRight',
                text: "<%= flash.success %>",
                timeout: 1500
}).show();

        <%}%>

        <% if(flash.error && flash.error.length > 0) {%>
            new Noty({
                theme: "relax",
                type: 'error',
                layout: 'topRight',
                text: "<%= flash.error %>",
                timeout: 1500
}).show();

        <%}%>
    </script>
     
</body>
</html>